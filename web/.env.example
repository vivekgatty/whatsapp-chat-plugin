# ============================================================
# ChatMadi CRM — Environment Variables
# Copy to .env.local and fill in your values
# ============================================================

# Meta / WhatsApp Cloud API
WHATSAPP_WEBHOOK_VERIFY_TOKEN=          # Any random string you set during Meta webhook setup
META_APP_ID=                            # From Meta Developer Console → App Dashboard
META_APP_SECRET=                        # From Meta Developer Console → App Dashboard
META_CONFIG_ID=                         # Embedded Signup configuration ID (Meta Business Settings)
NEXT_PUBLIC_META_APP_ID=                # Same as META_APP_ID (exposed to client for FB SDK init)
NEXT_PUBLIC_META_CONFIG_ID=             # Same as META_CONFIG_ID (for client-side FB.login)

# Encryption (AES-256-GCM for stored WhatsApp access tokens)
ENCRYPTION_KEY=                         # 32-byte random hex: openssl rand -hex 32

# Supabase
NEXT_PUBLIC_SUPABASE_URL=               # https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=          # anon/public key from Supabase dashboard
SUPABASE_SERVICE_ROLE=                  # service_role key (server-only, never expose)

# Razorpay
RAZORPAY_KEY_ID=                        # rzp_live_... or rzp_test_...
RAZORPAY_KEY_SECRET=                    # From Razorpay Dashboard → API Keys
RAZORPAY_WEBHOOK_SECRET=                # From Razorpay Dashboard → Webhooks

# Email (Resend)
RESEND_API_KEY=                         # re_...

# App
NEXT_PUBLIC_APP_URL=                    # https://chatmadi.com (no trailing slash)

# Cron / internal webhooks
CRON_SECRET=                            # Secret for analytics snapshot cron endpoint
AUTOMATION_WEBHOOK_SECRET=              # Secret for automation execution endpoint
